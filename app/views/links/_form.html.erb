<%= render("layouts/errors", :object => @link) %>

<%= form_for (@link) do |f| %>
<div class='form'>
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title, :placeholder => "Enter post title..." %><br>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url, :placeholder => "Enter URL..." %><br>
  <%= f.label :content, "Content:" %>
  <%= f.text_field :content, :placeholder => "Enter Content..." %><br>
</div>
<div class="btn">
  <%= f.submit("Enter", :class => 'btn') %>
</div>
<% end %>
